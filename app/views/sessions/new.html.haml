- provide_title I18n.t('sessions.new.title')
.row
  .col-md-4.col-md-offset-4

    = form_tag(sessions_path) do
      
      = label_tag User.human_attribute_name(:email)
      = text_field_tag :email, params[:email], class: "form-control", placeholder: User.human_attribute_name(:email)

      = label_tag User.human_attribute_name(:password)
      = password_field_tag :password, nil, placeholder: User.human_attribute_name(:password) , class: "form-control"
      .reset_password
        %small= link_to t('sessions.new.reset_password'), password_reset_request_url

      = submit_tag I18n.t('sessions.new.submit'), class: "btn form-first-btn sign-btn"

    %p.text-right
      = I18n.t('sessions.new.new_user')
      = link_to(I18n.t('sessions.new.signup_link'), signup_path)
