- provide_title I18n.t('sessions.new_password_reset_request.title')
.row
  .col-md-4.col-md-offset-4
    = t('sessions.new_password_reset_request.text')
    %br
    %br
    = form_tag url: password_reset_request_url, method: :post
    = text_field_tag "email", nil, placeholder: User.human_attribute_name(:email)
    .form-= submit_tag t('sessions.new_password_reset_request.submit'), class: "btn btn-block btn-primary"


